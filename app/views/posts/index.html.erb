<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <div class="post-preview">
      <% @posts.each do |post| %>
          <h2 class="post-title"><%=	link_to post.title, post %></h2>
          <h3 class="post-subtitle"><%= truncate(post.body, length: 100) %></h3>
          <p class="post-meta">Posted by <a href="#">PrioM</a> <%= time_ago_in_words(post.created_at) %> ago</p>
      <% end %>
    </div>
  </div>
</div>
