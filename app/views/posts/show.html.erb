<header class="intro-header" style="background-image: url(<%= asset_path('post-bg.jpg')%>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1 class="post-title"><%= @post.title %></h1>
          <span class="meta">Posted <%= time_ago_in_words(@post.created_at) %> ago by <a href="#">PrioM</a>  | <%=	 link_to 'Edit', edit_post_path(@post) %> | <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure? You can not undo this action."}, class: "text-danger" %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <p><%= @post.body %></p>
        <hr>
        <h1>Comments</h1>
        <h4><%=	@post.comments.count %> Comments</h4>
        <%=	render @post.comments %>
        <hr>
        <%=	render 'comments/comment-form' %>
        <br>
      </div>
    </div>
  </div>
</article>

